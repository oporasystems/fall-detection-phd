# Directories
falls_dir = "/content/drive/MyDrive/human_falls"
adl_dir = "/content/drive/MyDrive/ADL"

# Set up device
device = torch.device("cuda" if torch.cuda.is_available() else "cpu")

#########################################
# DATASET DEFINITION
#########################################
class VideoFrameDataset(Dataset):
    """
    A dataset that:
    - Reads folders of frames (each folder is one video).
    - Samples a fixed number of frames per video (temporal sampling).
    - Applies spatial transformations (augmentations).
    - Returns a sequence of images (T x C x H x W) and a label.
    """
    def __init__(self, video_folders, label, num_frames=8, transform=None):
        self.video_folders = video_folders
        self.label = label
        self.num_frames = num_frames
        self.transform = transform
        
    def __len__(self):
        return len(self.video_folders)
    
    def __getitem__(self, idx):
        video_folder = self.video_folders[idx]
        frame_paths = sorted(glob.glob(os.path.join(video_folder, "*.jpg")))
        
        # If video has fewer frames than num_frames, sample with replacement
        if len(frame_paths) < self.num_frames:
            selected_frames = random.choices(frame_paths, k=self.num_frames)
        else:
            # Uniform sampling
            indices = torch.linspace(0, len(frame_paths)-1, steps=self.num_frames).long()
            selected_frames = [frame_paths[i] for i in indices]
        
        frames = []
        for fp in selected_frames:
            img = Image.open(fp).convert("RGB")
            if self.transform:
                img = self.transform(img)
            frames.append(img)
        
        # Stack frames: [T, C, H, W]
        frames = torch.stack(frames, dim=0)
        return frames, self.label

#########################################
# DATA PREPARATION
#########################################
# List all video folders for falls and ADL
fall_videos = [os.path.join(falls_dir, v) for v in os.listdir(falls_dir) if os.path.isdir(os.path.join(falls_dir, v))]
adl_videos = [os.path.join(adl_dir, v) for v in os.listdir(adl_dir) if os.path.isdir(os.path.join(adl_dir, v))]

# Create labels: fall=1, adl=0
fall_dataset = VideoFrameDataset(fall_videos, label=1, num_frames=8,
                                 transform=transforms.Compose([
                                     transforms.Resize((224,224)),
                                     transforms.RandomHorizontalFlip(),
                                     transforms.ToTensor(),
                                     transforms.Normalize(mean=[0.485,0.456,0.406],std=[0.229,0.224,0.225])
                                 ]))

adl_dataset = VideoFrameDataset(adl_videos, label=0, num_frames=8,
                                transform=transforms.Compose([
                                    transforms.Resize((224,224)),
                                    transforms.RandomHorizontalFlip(),
                                    transforms.ToTensor(),
                                    transforms.Normalize(mean=[0.485,0.456,0.406],std=[0.229,0.224,0.225])
                                ]))

full_dataset = torch.utils.data.ConcatDataset([fall_dataset, adl_dataset])

# Split dataset into train, val, test
dataset_size = len(full_dataset)
train_size = int(0.7 * dataset_size)
val_size = int(0.15 * dataset_size)
test_size = dataset_size - train_size - val_size
train_dataset, val_dataset, test_dataset = random_split(full_dataset, [train_size, val_size, test_size])

train_loader = DataLoader(train_dataset, batch_size=4, shuffle=True, num_workers=2)
val_loader = DataLoader(val_dataset, batch_size=4, shuffle=False, num_workers=2)
test_loader = DataLoader(test_dataset, batch_size=4, shuffle=False, num_workers=2)

#########################################
# MODEL DEFINITION
#########################################
# We'll use a pretrained ViT from timm to encode each frame individually.
# Then, we add a temporal transformer (a small ViT-like block) to fuse the frame-level features.

class TemporalTransformer(nn.Module):
    """
    A simple temporal transformer that takes frame-level embeddings and applies multi-head attention
    across the temporal dimension.
    """
    def __init__(self, embed_dim, depth=2, num_heads=4, mlp_ratio=4.0, dropout=0.1):
        super().__init__()
        encoder_layer = nn.TransformerEncoderLayer(d_model=embed_dim, nhead=num_heads, dim_feedforward=int(embed_dim*mlp_ratio), dropout=dropout)
        self.transformer = nn.TransformerEncoder(encoder_layer, num_layers=depth)
        
    def forward(self, x):
        # x: [B, T, C], we want to apply temporal attention over T
        # Transformer expects [T, B, C]
        x = x.permute(1,0,2)
        x = self.transformer(x)
        x = x.permute(1,0,2) # back to [B, T, C]
        return x

class VideoViTModel(nn.Module):
    def __init__(self, frame_model_name="vit_base_patch16_224", num_classes=2, temporal_depth=2, temporal_heads=4):
        super().__init__()
        
        # Frame-level model
        self.frame_encoder = timm.create_model(frame_model_name, pretrained=True)
        # Remove head from the frame encoder
        self.embed_dim = self.frame_encoder.head.in_features
        self.frame_encoder.reset_classifier(0)  # no classification layer
        
        # Temporal transformer
        self.temporal_transformer = TemporalTransformer(embed_dim=self.embed_dim, depth=temporal_depth, num_heads=temporal_heads)
        
        # Classification head
        self.fc = nn.Linear(self.embed_dim, num_classes)
        
    def forward(self, x):
        # x: [B, T, C, H, W]
        B, T, C, H, W = x.shape
        
        # Encode each frame separately
        # We'll flatten B and T to process as a batch for ViT: [B*T, C, H, W]
        x = x.view(B*T, C, H, W)
        frame_feats = self.frame_encoder.forward_features(x)  # [B*T, embed_dim]
        
        # Reshape back to [B, T, embed_dim]
        frame_feats = frame_feats.view(B, T, self.embed_dim)
        
        # Apply temporal transformer
        temporal_out = self.temporal_transformer(frame_feats) # [B, T, embed_dim]
        
        # We can use the mean of temporal outputs
        pooled = temporal_out.mean(dim=1) # [B, embed_dim]
        
        # Classification
        out = self.fc(pooled)
        return out

model = VideoViTModel().to(device)

#########################################
# TRAINING SETUP
#########################################
criterion = nn.CrossEntropyLoss()
optimizer = torch.optim.AdamW(model.parameters(), lr=1e-4, weight_decay=1e-4)
scheduler = CosineAnnealingLR(optimizer, T_max=10)

def train_one_epoch(model, loader, optimizer, criterion, device):
    model.train()
    running_loss, running_correct, total = 0.0, 0, 0
    for frames, labels in loader:
        frames = frames.to(device)
        labels = labels.to(device)
        
        optimizer.zero_grad()
        outputs = model(frames)
        loss = criterion(outputs, labels)
        loss.backward()
        optimizer.step()
        
        # Stats
        _, preds = torch.max(outputs, 1)
        running_loss += loss.item()*frames.size(0)
        running_correct += torch.sum(preds == labels).item()
        total += frames.size(0)
    
    epoch_loss = running_loss / total
    epoch_acc = running_correct / total
    return epoch_loss, epoch_acc

def evaluate(model, loader, criterion, device):
    model.eval()
    running_loss, running_correct, total = 0.0, 0, 0
    with torch.no_grad():
        for frames, labels in loader:
            frames = frames.to(device)
            labels = labels.to(device)
            outputs = model(frames)
            loss = criterion(outputs, labels)
            
            _, preds = torch.max(outputs, 1)
            running_loss += loss.item()*frames.size(0)
            running_correct += torch.sum(preds == labels).item()
            total += frames.size(0)
    epoch_loss = running_loss / total
    epoch_acc = running_correct / total
    return epoch_loss, epoch_acc

#########################################
# TRAINING LOOP
#########################################
num_epochs = 10
best_val_acc = 0.0
for epoch in range(num_epochs):
    train_loss, train_acc = train_one_epoch(model, train_loader, optimizer, criterion, device)
    val_loss, val_acc = evaluate(model, val_loader, criterion, device)
    scheduler.step()
    
    print(f"Epoch [{epoch+1}/{num_epochs}]")
    print(f"Train Loss: {train_loss:.4f} Train Acc: {train_acc:.4f}")
    print(f"Val Loss: {val_loss:.4f} Val Acc: {val_acc:.4f}")
    
    if val_acc > best_val_acc:
        best_val_acc = val_acc
        torch.save(model.state_dict(), "best_video_vit_model.pth")
        print("Saved Best Model")

#########################################
# TEST EVALUATION
#########################################
model.load_state_dict(torch.load("best_video_vit_model.pth"))
test_loss, test_acc = evaluate(model, test_loader, criterion, device)
print(f"Test Loss: {test_loss:.4f} Test Acc: {test_acc:.4f}")
